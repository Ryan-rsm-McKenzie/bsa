{
  "name": "bsa",
  "version-string": "1",
  "dependencies": [
    "directxtex",
    "rsm-binary-io",
    "rsm-mmio"
  ],
  "default-features": [
    "compression"
  ],
  "features": {
    "compression": {
      "description": "Build compression libraries with vcpkg",
      "dependencies": [
        "lz4",
        "zlib"
      ]
    },
    "tests": {
      "description": "Build tests",
      "dependencies": [
        "catch2"
      ]
    },
    "xmem": {
      "description": "Build support for xmem proxy",
      "dependencies": [
        "reproc"
      ]
    }
  }
}
